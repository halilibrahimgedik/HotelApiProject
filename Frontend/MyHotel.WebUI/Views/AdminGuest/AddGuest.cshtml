@model CreateGuestDto
@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">

    <div class="form-group">
        <label>Misafir Ad</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label>Misafir Soyad</label>
        <input type="text" asp-for="Surname" class="form-control" />
        <span class="text-danger" asp-validation-for="Surname"></span>
    </div>

    <div class="form-group">
        <label>Misafir TC</label>
        <input type="text" asp-for="GuestIdentityNo" class="form-control" />
        <span class="text-danger" asp-validation-for="GuestIdentityNo"></span>
    </div>

    <div class="form-group">
        <label>Misafir Yaş</label>
        <input type="text" asp-for="Age" class="form-control" />
        <span class="text-danger" asp-validation-for="Age"></span>
    </div>


    <button type="submit" class="btn btn-primary"> Kaydet </button>
</form>

