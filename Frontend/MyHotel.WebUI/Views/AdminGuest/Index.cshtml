@model List<ListGuestsDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}



<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Müşteri TC</th>
            <th>Müşteri Ad</th>
            <th>Müşteri Soyad</th>
            <th>Müşteri Yaş</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.GuestIdentityNo</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Age</td>
            <td><a href="/AdminGuest/DeleteGuest/@item.GuestId" class="btn btn-danger"> Sil </a></td>
            <td><a href="/AdminGuest/UpdateGuest/@item.GuestId" class="btn btn-success"> Güncelle </a></td>
        </tr>
    }
</table>

<a href="/AdminGuest/AddGuest" class="btn btn-info">Yeni Müşteri Kayıt</a>