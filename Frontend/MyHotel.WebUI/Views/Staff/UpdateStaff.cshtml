@model UpdateStaffViewModel

@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Güncelleme Sayfası</h1>

<form method="post">

    <input type="hidden" asp-for="StaffId"/>

    <div class="form-group">
        <label>İsim</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Personel Ünvanı</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>Sosyal Medya 1</label>
        <input type="text" asp-for="SocialMedia1" class="form-control" />
    </div>

    <div class="form-group">
        <label>Sosyal Medya 2</label>
        <input type="text" asp-for="SocialMedia2" class="form-control" />
    </div>

    <div class="form-group">
        <label>Sosyal Medya 3</label>
        <input type="text" asp-for="SocialMedia3" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary"> Kaydet </button>
</form>

