@using MyHotel.EntityLayer.Concrete;
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Index</h1>


<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>Resim</th>
            <th>Ad & Soyadd</th>
            <th>Şehir</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""> </td>
                <td> @item.Name @item.Surname</td>
                <td>@item.City</td>
                <td><i class="fa fa-circle-o text-success  mr-2"></i> Aktif</td>
            </tr>
        }
    </tbody>
</table>
<br />
<a asp-action="Index" asp-controller="Register" class="btn btn-primary">Yeni Kullanıcı Kayıt</a>
