@model AddServiceDto

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">

    <div class="form-group">
        <label>Hizmet İkonu</label>
        <input type="text" asp-for="ServiceIcon" class="form-control" />
        <span class="text-danger" asp-validation-for="ServiceIcon"></span>
    </div>

    <div class="form-group">
        <label>Hizmet Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label>Hizmet Açıklaması</label>
        <textarea type="text" asp-for="Description" rows="4" class="form-control"> </textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <button type="submit" class="btn btn-primary"> Kaydet </button>
</form>