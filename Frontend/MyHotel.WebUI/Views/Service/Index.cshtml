
@model List<ListServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Hizmet Başlığı </th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceId</td>
            <td>@item.Title</td>
            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger"> Sil </a></td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-success"> Güncelle </a></td>
        </tr>
    }
</table>

<a href="/Service/AddService" class="btn btn-info">Yeni Hizmet Girişi</a>

