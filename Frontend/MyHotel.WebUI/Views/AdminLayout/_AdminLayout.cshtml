@{
    Path = "~/Views/AdminLayout";
}
<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync($"{Path}/HeadPartial.cshtml")

<body>

    @await Html.PartialAsync($"{Path}/PreloaderPartial.cshtml")
    
    <div id="main-wrapper">

        @await Html.PartialAsync($"{Path}/NavHeaderPartial.cshtml")

        @await Html.PartialAsync($"{Path}/HeaderPartial.cshtml")

        @await Html.PartialAsync($"{Path}/SidebarPartial.cshtml")
 

        <div class="content-body">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                @RenderBody()


                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>

        @await Html.PartialAsync($"{Path}/FooterPartial.cshtml")
       
    </div>

    @await Html.PartialAsync($"{Path}/ScriptPartial.cshtml")

</body>

</html>